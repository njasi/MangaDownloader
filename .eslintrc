{
  "root": true,
  "extends": ["prettier",  "fullstack", "prettier/react"],
  "rules": {
    "semi": 0,
    "no-unused-vars" : 2,
    "no-undef" : 2
  },
  "ecmaFeatures": {
    "modules": true,
    "spread" : true,
    "restParams" : true
  },
  "env" : {
      "browser" : true,
      "node" : true,
      "es6" : true
  },
  "parserOptions": {
      "sourceType": "module"
  }
}
